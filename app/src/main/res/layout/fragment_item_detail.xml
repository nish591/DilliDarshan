<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
<androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/allContent"
        android:paddingBottom="30dp">
        <ImageView
            android:id="@+id/tvImage"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:contentDescription="item_image"
            tools:src="@drawable/spot4" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/tvImage"
            android:textColor="@color/theme"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:text="Item Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tvAddress"
            android:drawSelectorOnTop="true">
            <ImageView
                android:src="@drawable/location_blue"
                android:id="@+id/tvAddress1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/theme"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="14dp"
                android:text="Item Address"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvAddress"
            android:id="@+id/tvPhone"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:drawSelectorOnTop="true">
            <ImageView
                android:src="@drawable/call_blue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvPhone1" />
            <TextView
                android:id="@+id/tvPhone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/theme"
                android:layout_margin="14dp"
                android:fontFamily="sans-serif-medium"
                android:text="Item Phone Number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvPhone"
            android:id="@+id/tvTime"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:drawSelectorOnTop="true">
            <ImageView
                android:src="@drawable/clock_blue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTime1" />
            <TextView
                android:id="@+id/tvTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/theme"
                android:layout_margin="14dp"
                android:text="Item Timing"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvTime"
            android:textColor="#545486"
            android:paddingBottom="30dp"
            android:layout_margin="25dp"
            android:text="Item Body" />
    </RelativeLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/favourites"
            android:src="@drawable/baseline_favorite_border_white_24dp"
            android:background="@color/colorAccent"
            app:fabSize="normal"
            app:layout_anchor="@id/allContent"
            app:layout_anchorGravity="bottom|right|end" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>